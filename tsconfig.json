{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es6",
      "dom",
      "es7"
    ],
    "module": "commonjs",
    "sourceMap": true,
    "inlineSources": true,
    "jsx": "react",
    "target": "es5",
    "outDir": "./lib",
    "removeComments": true,
    "strict": false,
    "rootDirs": ["src", "stories"],
    "baseUrl": "src",
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ],
  "exclude": [
    "./node_modules/**/*",
    "./src/**/*.spec.tsx",
    "./src/**/*.spec.ts",
    "./src/**/__mocks__/**/*",
    "./src/**/__tests__/**/*"
  ]
}
